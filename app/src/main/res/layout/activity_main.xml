<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login"
    android:clipToOutline="true">


    <ImageView
        android:id="@+id/robots_copi"
        android:layout_width="407dp"
        android:layout_height="272dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        app:srcCompat="@drawable/imagenp" />

    <TextView
        android:id="@+id/login2"
        android:layout_width="214dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="307dp"
        android:gravity="center_horizontal|top"
        android:text="@string/login"
        android:textAppearance="@style/login" />


    <EditText
        android:id="@+id/txt_usuario"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="351dp"
        android:drawableStart="@drawable/candado8"
        android:hint="@string/txt_usuario"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textAppearance="@style/txt_usuario" />

    <EditText
        android:id="@+id/txt_contras"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="409dp"
        android:drawableStart="@drawable/user8"
        android:hint="@string/txt_contras"
        android:inputType="textPassword"
        android:textAlignment="viewStart"
        android:textAppearance="@style/txt_contras" />

    <View
        android:id="@+id/login1"
        android:layout_width="305dp"
        android:layout_height="224dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="304dp"
        android:background="#00000000" />

    <TextView
        android:id="@+id/crear_cuent"
        android:layout_width="154dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="129dp"
        android:layout_marginTop="560dp"
        android:gravity="center_horizontal|top"
        android:text="@string/crear_cuent"
        android:textAppearance="@style/crear_cuent" />

    <Button
        android:id="@+id/button"
        android:layout_width="146dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="483dp"
        android:drawableLeft="@drawable/ic_ingresar"
        android:onClick="login"
        android:textAlignment="center"
        android:text="@string/enter"
        android:background="@drawable/btningresar"
        android:textAppearance="@style/enter" />

</RelativeLayout>